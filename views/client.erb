<h3> <%= @client.name %> </h3>

<h4> <%= @stylist_message %> </h4>

<form action='/client/<%= @client.id %>' method='post'>
  <input name="_method" type="hidden" value="patch">
  <div class='form-group'>
    <label for='new_name'>Enter a new name:</label>
    <input id='new_name' name='new_name' class='form-control' type='text'>
  </div>
  <button id='update_client' class='btn-success'>Update Client</button>
</form>

<br>

<form action='/client/<%= @client.id %>' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="delete">
    <button id='delete_client' class='btn-danger'>Delete Client</button>
  </div>
</form>

<a href="/clients">Back</a>
